# Example ~/.gitconfig.work file
# This file is NOT managed by chezmoi and should be created manually on work machines
# Copy this file to ~/.gitconfig.work and fill in your work-specific settings

# Git URL rewrites for work GitLab
[url "git@gitlab.company.com:"]
    insteadOf = https://gitlab.company.com

# Credential helper with personal access token
[credential]
    helper = "!f() { sleep 1; echo \"username=token\"; echo \"password=YOUR_TOKEN_HERE\"; }; f"

# Work-specific git aliases or settings
# [alias]
#     work-command = some-command
