{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
  "env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
    "ANTHROPIC_BEDROCK_BASE_URL": "{{ .claude.bedrock_url }}",
    "ANTHROPIC_AUTH_TOKEN": "{{ .claude.auth_token }}"
  },
{{- end }}
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(export:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(test:*)",
      "Bash(yq:*)",
      "Bash(git fetch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git reset --mixed:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git rebase:*)",
      "Bash(git rev-parse:*)",
      "Bash(go list:*)",
      "Bash(go doc:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl explain:*)",
      "Bash(kubectl version:*)",
      "Bash(kubectl config:*)",
      "Bash(kubectl api-resources:*)",
      "Bash(kubectl api-versions:*)",
      "Bash(kubectl cluster-info:*)",
      "Bash(kubectl top:*)",
      "Bash(go test:*)",
      "Bash(go get:*)",
      "Bash(go build:*)",
      "Bash(glab issue view:*)",
      "Bash(glab mr view:*)",
      "Bash(glab mr create:*)",
      "Read",
      "WebFetch",
      "WebSearch",
      "Search",
      "Grep"
    ],
    "deny": [
      "Bash(git reset --hard:*)"
    ],
    "defaultMode": "plan"
  },
  "enabledPlugins": {
    "code-reviewer@fleet-tools": true,
    "gitlab-pm@fleet-tools": true
  },
  "alwaysThinkingEnabled": true
}
