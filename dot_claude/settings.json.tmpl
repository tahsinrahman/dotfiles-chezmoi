{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
  "env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
    "ANTHROPIC_BEDROCK_BASE_URL": "{{ .claude.bedrock_url }}",
    "ANTHROPIC_MODEL": "global.anthropic.claude-opus-4-5-20251101-v1:0",
    "ANTHROPIC_AUTH_TOKEN": "{{ .claude.auth_token }}"
  },
{{- end }}
  "permissions": {
    "allow": [
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
      "mcp__gitlab__create_issue",
      "mcp__gitlab__create_merge_request_note",
      "mcp__gitlab__get_merge_request",
      "mcp__gitlab__get_merge_request_diffs",
      "mcp__gitlab__get_mr_discussions",
      "mcp__slack__slack_get_thread_replies",
      "mcp__sourcegraph__sg_keyword_search",
      "mcp__sourcegraph__sg_nls_search",
      "mcp__sourcegraph__sg_read_file",
      "Skill(code-review:code-review)",
      "Skill(gitlab-pm:create-issue)",
      "Skill(gitlab-pm:create-mr)",
      "Skill(gitlab-skills:gitlab)",
      "Skill(golang:go-api-design)",
      "Skill(golang:go-concurrency)",
      "Skill(golang:go-errors)",
      "Skill(golang:go-naming)",
      "Skill(golang:go-testing)",
{{- end }}
      "Bash(awk:*)",
      "Bash(bd:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(curl:*)",
      "Bash(export:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git remote get-url origin | sed*)",
      "Bash(git remote get-url:*)",
      "Bash(git remote:*)",
      "Bash(git reset --mixed:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(glab issue view:*)",
      "Bash(glab mr create:*)",
      "Bash(glab mr diff:*)",
      "Bash(glab mr update:*)",
      "Bash(glab mr view:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go get:*)",
      "Bash(go list:*)",
      "Bash(go mod tidy:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go work:*)",
      "Bash(golangci-lint run:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(kubectl api-resources:*)",
      "Bash(kubectl api-versions:*)",
      "Bash(kubectl cluster-info:*)",
      "Bash(kubectl config:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl explain:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl top:*)",
      "Bash(kubectl version:*)",
      "Bash(ls:*)",
      "Bash(make build:*)",
      "Bash(make generate:*)",
      "Bash(make lint:*)",
      "Bash(make test:*)",
      "Bash(mkdir:*)",
      "Bash(openssl x509:*)",
      "Bash(sed:*)",
      "Bash(tail:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(xargs grep:*)",
      "Bash(yq:*)",
      "Grep",
      "mcp__plugin_context7_context7__query-docs",
      "mcp__plugin_context7_context7__resolve-library-id",
      "Read",
      "Search",
      "Skill(beads:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(git reset --hard:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "plannotator",
            "timeout": 1800
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/ccnotify/ccnotify.py Stop"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
    "code-reviewer@fleet-tools": true,
    "gitlab-pm@fleet-tools": true,
    "gitlab-skills@fleet-tools": true,
    "golang@fleet-tools": true,
{{- end }}
    "beads@beads-marketplace": true,
    "clangd-lsp@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "plannotator@plannotator": true,
    "ralph-loop@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  }
}
