{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
  "env": {
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
    "ANTHROPIC_BEDROCK_BASE_URL": "{{ .claude.bedrock_url }}",
    "ANTHROPIC_MODEL": "global.anthropic.claude-opus-4-5-20251101-v1:0",
    "ANTHROPIC_AUTH_TOKEN": "{{ .claude.auth_token }}"
  },
{{- end }}
  "permissions": {
    "allow": [
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
      "Skill(gitlab-skills:gitlab)",
      "Skill(create-issue)",
      "Skill(gitlab-pm:create-issue)",
      "Skill(gitlab-pm:create-mr)",
{{- end }}
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cd:*)",
      "Bash(sed:*)",
      "Bash(bd:*)",
      "Bash(export:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(test:*)",
      "Bash(yq:*)",
      "Bash(git fetch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git reset --mixed:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git rebase:*)",
      "Bash(git rev-parse:*)",
      "Bash(git remote:*)",
      "Bash(git remote get-url origin | sed*)",
      "Bash(go list:*)",
      "Bash(go doc:*)",
      "Bash(go mod:*)",
      "Bash(go work:*)",
      "Bash(glab mr update:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl explain:*)",
      "Bash(kubectl version:*)",
      "Bash(kubectl config:*)",
      "Bash(kubectl api-resources:*)",
      "Bash(kubectl api-versions:*)",
      "Bash(kubectl cluster-info:*)",
      "Bash(kubectl top:*)",
      "Bash(go test:*)",
      "Bash(go get:*)",
      "Bash(go build:*)",
      "Bash(glab issue view:*)",
      "Bash(glab mr view:*)",
      "Bash(glab mr create:*)",
      "Read",
      "WebFetch",
      "WebSearch",
      "Search",
      "Grep"
    ],
    "deny": [
      "Bash(git reset --hard:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "plannotator",
            "timeout": 1800
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
{{- if (and (hasKey . "machine") (hasKey .machine "is_work") .machine.is_work) }}
    "code-reviewer@fleet-tools": true,
    "gitlab-pm@fleet-tools": true,
    "gitlab-skills@fleet-tools": true,
{{- end }}
    "beads@beads-marketplace": true,
    "clangd-lsp@claude-plugins-official": true,
    "plannotator@plannotator": true,
    "gopls-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
