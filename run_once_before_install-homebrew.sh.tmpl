#!/bin/bash
# run_once_before_install-homebrew.sh
# This script ensures Homebrew is installed before chezmoi applies dotfiles
# It runs once and only on macOS systems

{{- if eq .chezmoi.os "darwin" }}

set -e

echo "ğŸº Checking Homebrew installation..."

# Check if Homebrew is installed
if ! command -v brew &> /dev/null; then
    echo "ğŸ“¦ Homebrew not found. Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

    # Add Homebrew to PATH for Apple Silicon Macs
    if [[ $(uname -m) == "arm64" ]]; then
        echo "ğŸ”§ Adding Homebrew to PATH for Apple Silicon..."
        echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> ~/.zprofile
        eval "$(/opt/homebrew/bin/brew shellenv)"
    fi
else
    echo "âœ… Homebrew is already installed"
fi

# Ensure brew bundle command is available
if ! brew tap | grep -q "homebrew/bundle"; then
    echo "ğŸ“¦ Installing homebrew-bundle..."
    brew tap homebrew/bundle
fi

echo "âœ… Homebrew setup complete!"

{{- else }}
echo "â­ï¸  Skipping Homebrew installation (not macOS)"
{{- end }}
